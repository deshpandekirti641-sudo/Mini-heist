{
  "name": "mini-gang-wars-online",
  "version": "3.0.0",
  "description": "Mini Gang Wars — online Indian mini‑GTA. Two high-fidelity 3D maps (Mumbai free, Delhi premium) with transit, vehicles, missions, purchase flow and admin control. Server + client scaffolding.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js --watch src --watch project.json",
    "build": "webpack --config webpack.config.js --mode production",
    "build:client": "webpack --config webpack.client.config.js --mode production",
    "lint": "eslint src/ public/",
    "test": "jest --runInBand",
    "seed:maps": "node scripts/seedMaps.js",
    "import:mumbai": "node scripts/importMumbaiMap.js --map mumbai3d",
    "import:delhi": "node scripts/importDelhiMap.js --map delhi3d",
    "verify-payment": "node scripts/verifyPayment.js",
    "admin-ui": "npx http-server public/admin -p 6001 -c-1",
    "access-ui": "npx http-server public/map-access -p 6000 -c-1",
    "deploy": "node scripts/deploy.js",
    "run-npm-install": "npm install",
    "build-npm": "npm run build",
    "clean": "rimraf dist .cache"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deshpandekirti641-sudo/mini-gang-wars"
  },
  "keywords": [
    "mini-gang-wars",
    "game",
    "india",
    "mumbai",
    "delhi",
    "online",
    "3d-map",
    "purchase-gated"
  ],
  "author": "deshpandekirti641-sudo",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^8.9.0",
    "uuid": "^9.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": "20.x"
  }
}